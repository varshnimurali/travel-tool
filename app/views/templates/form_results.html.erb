<h1> Results </h1>

<% @itineraries.first(3).each_with_index do |itinerary, i| %>
  <h2>Itinerary <%= i + 1 %></h2>

  <h3>Destinations:</h3>
  <ul>
    <% itinerary["destinations"].each do |destination| %>
      <li><%= destination %></li>
    <% end %>
  </ul>

  <h3>Accommodations:</h3>
  <ul>
    <% itinerary["accommodations"].each do |accommodation| %>
      <li><%= accommodation %></li>
    <% end %>
  </ul>

  <h3>Activities:</h3>
  <ul>
    <% itinerary["activities"].each do |activity| %>
      <li><%= activity %></li>
    <% end %>
  </ul>

  <p><strong>Estimated Cost:</strong> $<%= itinerary["estimated_cost"] %></p>
<% end %>
